{
  "name": "template-replace",
  "displayName": "template replace",
  "description": "替换模版文件中的固定字符串",
  "version": "0.7.1",
  "publisher": "wangzelin",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./code/dist/src/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "replace",
        "properties": {
          "conf.replace.workSpacePath": {
            "type": "string",
            "default": "explorer",
            "description": "工作区域路径",
            "scope": "window"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "fileExplorer.openFile",
        "title": "Open File"
      },
      {
        "command": "fileExplorer.openFloder",
        "title": "Open File"
      },
      {
        "command": "fileExplorer.replace",
        "title": "=>"
      },
      {
        "command": "config.setWorkSpacePath",
        "title": "修改工作区域路径"
      },
      {
        "command": "config.addFile",
        "title": "+"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "fileExplorer",
          "name": "文本替换脚本"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "config.setWorkSpacePath",
          "when": "view == fileExplorer"
        },
        {
          "command": "config.addFile",
          "when": "view == fileExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "fileExplorer.replace",
          "when": "view == fileExplorer && viewItem == file",
          "group": "inline"
        },
        {
          "command": "fileExplorer.openFloder",
          "when": "view == fileExplorer && viewItem == file"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "clean": "rimraf code/dist code/tsconfig.tsbuildinfo",
    "build:code": "tsc -p ./tsconfig.json",
    "build": "npm run clean && npm run build:code"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/mkdirp": "^2.0.0",
    "@types/node": "20.x",
    "@types/rimraf": "^4.0.5",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "uuid": "^10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bugbus/template-replace.git"
  }
}
